//VERSÃO DPS DE IMPLEMENTAR O SQLITE
{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "target": "ES6", // Define a versão ECMAScript alvo para ES6, ajustável conforme necessidade
    "module": "commonjs", // Usa o sistema de módulos CommonJS, que é comum em Node.js
    "esModuleInterop": true, // Facilita a interoperabilidade com módulos CommonJS
    "skipLibCheck": true, // Ignora a verificação de tipos em bibliotecas, pode acelerar a compilação
    "forceConsistentCasingInFileNames": true, // Garante consistência na capitalização de nomes de arquivos
    "paths": {
      "@/*": ["./*"] // Configura aliases para importações, ajustável conforme sua estrutura de projeto
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}


